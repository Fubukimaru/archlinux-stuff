# Accounts
set my_a1="example@lol.net"
#set my_a2="not_using_this_account@wow.org"


# Folder hooks
folder-hook "/$my_a1/*" "source ~/.config/neomutt/accounts/$my_a1"
#folder-hook "/$my_a2/*" "source ~/.config/neomutt/accounts/$my_a2"


# Default account
source ~/.config/neomutt/accounts/$my_a1

# Special mappings


# Macros for switching accounts
